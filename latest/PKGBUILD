# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds
pkgver=6.7.7
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=('patch')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
commit=fe0d4ef38f955b2a298ac9124ea3d8f085704edd
repo=fds
source=("https://github.com/firemodels/${repo}/archive/${commit}.zip" "fds.sh")
noextract=()
sha1sums=('SKIP' 'SKIP')
validpgpkeys=()

prepare() {
        echo "done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd ${repo}-${commit}/Build/impi_intel_linux_64
        ./make_fds.sh
        cp fds_impi_intel_linux_64 ../../../fds-exec
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        {
                echo "#!/bin/sh"
                echo "PROGRAM_VERSION=${pkgver}"
                echo "FDS_EXEC=fds-exec"
                cat fds.sh
        } > fds-script
        install fds-script "${INSTALLDIR}"/fds
        ls -A *
        install fds-exec "${INSTALLDIR}"/fds-exec
}
