# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds
pkgver=6.7.7
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=('patch')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
commit=fe0d4ef38f955b2a298ac9124ea3d8f085704edd
repo=fds
source=("https://github.com/firemodels/${repo}/archive/${commit}.zip")
noextract=()
sha1sums=('SKIP')
validpgpkeys=()

prepare() {
        echo "done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        %{repo}-%{commit}/Build/impi_intel_linux_64
        ./make_fds.sh
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        %{repo}-%{commit}/Build/impi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        install fds_impi_intel_linux_64 $INSTALLDIR/bin/fds-exec

        echo "#!/bin/sh" > ${INSTALLDIR}/bin/fds
        echo "source /opt/intel/oneapi/setvars.sh" >> ${INSTALLDIR}/fds
        echo "ulimit -s unlimited" >> ${INSTALLDIR}/fds
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/fds-exec \"\${@:2}\"" >> ${INSTALLDIR}/fds
}
