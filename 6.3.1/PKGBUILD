# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds-6.3.1
pkgver=6.3.1
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=('patch')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
commit=352eda994c0639660ccc86bbc230b51d00592e8c
repo=fds-smv_deprecated
source=("https://github.com/firemodels/${repo}/archive/${commit}.zip" "backports.patch" "fds.sh")
noextract=()
sha1sums=('SKIP' '59c59291c189a7604a3e638512ad23c674efbb03' 'SKIP')
validpgpkeys=()

prepare() {
        patch --strip=1 --input="${srcdir}/backports.patch" --directory ${repo}-${commit}
        echo "prepare done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd ${repo}-${commit}/FDS_Compilation/mpi_intel_linux_64
        dir=$(pwd)
        target=${dir##*/}
        make FCOMPL=mpiifort  FOPENMPFLAGS="-qopenmp -qopenmp-link static -liomp5" -j4 VPATH="../../FDS_Source" -f ../makefile $target
        cp fds_"$target" ../../../fds-exec
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        {
                echo "#!/bin/sh"
                echo "PROGRAM_VERSION=${pkgver}"
                echo "FDS_EXEC=fds-exec"
                cat fds.sh
        } > fds-script
        install fds-script "${INSTALLDIR}"/fds
        install fds-exec "${INSTALLDIR}"/fds-exec
}
