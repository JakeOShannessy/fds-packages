# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds-6.7.4
pkgver=6.7.4
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
source=("git+https://github.com/firemodels/fds#commit=bfaa110f1c29c157bf5f00143925c6501dd9c79a")
noextract=()
sha1sums=('SKIP')
validpgpkeys=()

prepare() {
        echo "done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd fds/Build/impi_intel_linux_64
        ./make_fds.sh
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        cd fds/Build/impi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        install fds_impi_intel_linux_64 $INSTALLDIR/bin/fds-exec-${pkgver}

        echo "#!/bin/sh" > ${INSTALLDIR}/bin/fds
        echo "source /opt/intel/oneapi/setvars.sh" >> ${INSTALLDIR}/fds-${pkgver}
        echo "ulimit -s unlimited" >> ${INSTALLDIR}/fds-${pkgver}
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/fds-exec-${pkgver} \"\${@:2}\"" >> ${INSTALLDIR}/fds-${pkgver}
}
