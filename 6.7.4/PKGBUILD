# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds-6.7.4
pkgver=6.7.4
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=('patch')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
commit=bfaa110f1c29c157bf5f00143925c6501dd9c79a
repo=fds
source=("https://github.com/firemodels/${repo}/archive/${commit}.zip")
noextract=()
sha1sums=('SKIP')
validpgpkeys=()

prepare() {
        echo "done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd ${repo}-${commit}/Build/impi_intel_linux_64
        ./make_fds.sh
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        cd ${repo}-${commit}/Build/impi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        install fds_impi_intel_linux_64 $INSTALLDIR/fds-exec-${pkgver}

        echo "#!/bin/sh" > fds
        echo "source /opt/intel/oneapi/setvars.sh" >> fds
        echo "ulimit -s unlimited" >> fds
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/fds-exec-${pkgver} \"\${@:2}\"" >> fds
        install fds ${INSTALLDIR}/fds-${pkgver}
}
