# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds-6.5.3
pkgver=6.5.3
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=('patch')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
commit=eb56ed1a8a2205333c5b98d636226159ba063d20
repo=fds
source=("https://github.com/firemodels/${repo}/archive/${commit}.zip" "backports.patch")
noextract=()
sha1sums=('SKIP' '847af10d83119c8cb1ac58e3dee1902dee0582d7')
validpgpkeys=()

prepare() {
        patch --strip=1 --input="${srcdir}/backports.patch" --directory ${repo}-${commit}
        echo "prepare done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd fds/Build/mpi_intel_linux_64
        dir=$(pwd)
        target=${dir##*/}
        make -j4 MPIFORT=mpiifort VPATH="../../Source" -f ../makefile $target
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        cd fds/Build/mpi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        install fds_mpi_intel_linux_64 $INSTALLDIR/bin/fds-exec-${pkgver}

        echo "#!/bin/sh" > ${INSTALLDIR}/bin/fds
        echo "source /opt/intel/oneapi/setvars.sh" >> ${INSTALLDIR}/fds-${pkgver}
        echo "ulimit -s unlimited" >> ${INSTALLDIR}/fds-${pkgver}
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/fds-exec-${pkgver} \"\${@:2}\"" >> ${INSTALLDIR}/fds-${pkgver}
}
