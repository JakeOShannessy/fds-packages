# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds-6.1.2
pkgver=6.1.2
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
source=("git+https://github.com/firemodels/fds-smv_deprecated#commit=689afcd4c59504cc031b860fd081d935a2a3351f" "backports.patch")
noextract=()
sha1sums=('SKIP' '506f2f5fc447f951940d8b7c2668790e6faa2273')
validpgpkeys=()

prepare() {
        patch --forward --strip=1 --input="${srcdir}/backports.patch" --directory fds-smv_deprecated/FDS_Source --strip 2
        echo "prepare done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        # Fix issue with code
        sed -i '2182 s/$/ \&/' fds-smv_deprecated/FDS_Source/part.f90
        cd fds-smv_deprecated/FDS_Compilation/impi_intel_linux_64
        platform=intel64
        dir=`pwd`
        target=${dir##*/}
        make FCOMPL=mpiifort  FOPENMPFLAGS="-qopenmp -qopenmp-link static -liomp5" -j4 VPATH="../../FDS_Source" -f ../makefile $target
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        cd fds-smv_deprecated/FDS_Compilation/impi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        install fds_impi_intel_linux_64 $INSTALLDIR/bin/fds-exec-${pkgver}

        echo "#!/bin/sh" > ${INSTALLDIR}/bin/fds
        echo "source /opt/intel/oneapi/setvars.sh" >> ${INSTALLDIR}/fds-${pkgver}
        echo "ulimit -s unlimited" >> ${INSTALLDIR}/fds-${pkgver}
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/fds-exec-${pkgver} \"\${@:2}\"" >> ${INSTALLDIR}/fds-${pkgver}
}
