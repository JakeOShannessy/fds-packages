# Maintainer: Jake O'Shannessy <joshannessy@smokecloud.io>
pkgname=fds-6.6.0
pkgver=6.6.0
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=('patch')
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
commit=88ae75a14dbfeef8d77bfcca1997878a14de5c8a
repo=fds
source=("https://github.com/firemodels/${repo}/archive/${commit}.zip" "backports.patch")
noextract=()
sha1sums=('SKIP' 'ed4c93f057163be4f21b4048d847b6d0f808e51b')
validpgpkeys=()

prepare() {
        patch --strip=1 --input="${srcdir}/backports.patch" --directory ${repo}-${commit}
        echo "prepare done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd ${repo}-${commit}/Build/impi_intel_linux_64
        ./make_fds.sh
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/usr/bin
        cd ${repo}-${commit}/Build/impi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR
        install fds_impi_intel_linux_64 $INSTALLDIR/fds-exec-${pkgver}

        echo "#!/bin/sh" > fds
        echo "source /opt/intel/oneapi/setvars.sh" >> fds
        echo "ulimit -s unlimited" >> fds
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/fds-exec-${pkgver} \"\${@:2}\"" >> fds
        install fds ${INSTALLDIR}/fds-${pkgver}
}
