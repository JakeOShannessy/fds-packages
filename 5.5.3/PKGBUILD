# Maintainer: Your Name <youremail@domain.com>
pkgname=fds-5.5.3+smokecloud.ifort
pkgver=5.5.3
pkgrel=1
epoch=
pkgdesc="Fire Dynamics Simulator (FDS) from NIST."
arch=('x86_64')
url="https://pages.nist.gov/fds-smv/"
license=('PublicDomain')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
install=
changelog=
source=("git+https://github.com/firemodels/fds#commit=bf0a6a88f318803adb96edef5c547746fc77e4a5" "backports.patch")
noextract=()
sha1sums=('SKIP' '847af10d83119c8cb1ac58e3dee1902dee0582d7')
validpgpkeys=()

prepare() {
        patch --forward --strip=2 --input="${srcdir}/backports.patch" fds/FDS_Source
        echo "prepare done"
}

build() {
        source /opt/intel/oneapi/setvars.sh
        cd fds/FDS_Compilation/mpi_intel_linux_64
        platform=intel64
        dir=`pwd`
        target=${dir##*/}
        make FCOMPL=mpiifort  FOPENMPFLAGS="-qopenmp -qopenmp-link static -liomp5" -j4 VPATH="../../FDS_Source" -f ../makefile "$target"
}

check() {
        echo "done"
}

package() {
        FINAL_INSTALL_DIR=/opt/FDS/$pkgver+smokecloud.ifort
        cd fds/FDS_Compilation/mpi_intel_linux_64
        INSTALLDIR=$pkgdir$FINAL_INSTALL_DIR
        mkdir -p $INSTALLDIR/bin
        mv fds5_mpi_intel_linux_64 $INSTALLDIR/bin/fds-exec

        echo "#!/bin/sh" > ${INSTALLDIR}/bin/fds
        echo "source /opt/intel/oneapi/setvars.sh" >> ${INSTALLDIR}/bin/fds
        echo "ulimit -s unlimited" >> ${INSTALLDIR}/bin/fds
        echo "exec mpiexec -np \$1 ${FINAL_INSTALL_DIR}/bin/fds-exec \"\${@:2}\"" >> ${INSTALLDIR}/bin/fds
        chmod 755 ${INSTALLDIR}/bin/fds
}
